<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--名字首字母-->
    <TextView
        android:id="@+id/item_select_contacts_tv_letter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dp"
        android:layout_marginStart="@dimen/dimen_26_dp"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:gravity="start|center_vertical"
        android:textColor="#F00"
        android:textSize="18sp"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90_dp"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:layout_marginBottom="@dimen/dimen_5_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_select_contacts_tv_name_avatar"
                android:layout_width="@dimen/dimen_76_dp"
                android:layout_height="@dimen/dimen_76_dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:background="@drawable/contact_info_avatar"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/item_select_contacts_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_5_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_10_dp"
                    android:layout_marginEnd="@dimen/dimen_10_dp"
                    android:layout_toStartOf="@id/item_select_contacts_cb"
                    android:orientation="vertical">
                    <!--用户的名字-->
                    <TextView
                        android:id="@+id/item_select_contacts_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:singleLine="true"
                        android:textColor="@android:color/black" />
                    <!--用户的号码-->
                    <TextView
                        android:id="@+id/item_select_contacts_tv_number"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:singleLine="true"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
